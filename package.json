{
  "name": "startup-serverless-starter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "sst start",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "prettier": "prettier --ignore-path .gitignore \"**/*/*.{ts,js,json,md,prisma}\"",
    "format": "pnpm prettier --write",
    "check:format": "pnpm prettier --list-different",
    "check:lint": "eslint --ignore-path .gitignore --ext .ts .",
    "check:type": "tsc --noEmit",
    "check:ci": "concurrently -n type,format,lint \"yarn check:type\" \"yarn check:format\" \"yarn check:lint\""
  },
  "engines": {
    "node": ">=16.17.0",
    "pnpm": ">=7"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "apps/backend/schema.prisma": [
      "prisma format"
    ]
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/yargs": "^17.0.17",
    "aws-cdk-lib": "2.50.0",
    "concurrently": "^7.6.0",
    "constructs": "10.1.156",
    "execa": "^6.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.7.1",
    "prisma": "^4.7.1",
    "sst": "snapshot",
    "tsx": "^3.12.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4",
    "vitest": "^0.25.7",
    "yargs": "^17.6.2"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}
